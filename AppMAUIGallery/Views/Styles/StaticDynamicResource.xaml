<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Styles.StaticDynamicResource"
             Title="StaticDynamicResource">
    <ContentPage.Resources>
        <Color x:Key="TitleColor">#FF0000</Color>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="20">
        <Label HorizontalOptions="Center"
               FontSize="24"
               Padding="20"
               TextColor="{StaticResource TitleColor}"
            Text="Welcome to .NET MAUI!"/>
        <Label TextColor="{DynamicResource TitleColor}" Text="Paragraph"></Label>
        <Button Text="Alterar" Clicked="Button_Clicked"></Button>
    </VerticalStackLayout>  
</ContentPage>