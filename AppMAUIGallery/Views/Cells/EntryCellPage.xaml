<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Cells.EntryCellPage"
             Title="EntryCellPage">
    <VerticalStackLayout>
        <TableView>
            <TableSection Title="Cadastro de colaboradores">
                <EntryCell Label="Digite o nome do Presidente" LabelColor="Red" Placeholder="Presidente" Keyboard="Text" HorizontalTextAlignment="Center"/>
                <EntryCell  Label="Digite o nome do diretor" Placeholder="Diretor"/>
                <EntryCell  Label="Digite o nome do Supervisor" Placeholder="Supervisor"/>
                <EntryCell  Label="Digite o nome do Contador" Placeholder="Contador"/>
            </TableSection>
        </TableView
    </VerticalStackLayout>
</ContentPage>